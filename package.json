{
  "name": "general-purpose-app-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@hqoss/monads": "^0.5.0",
    "@reduxjs/toolkit": "^1.9.6",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.55",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.8",
    "@types/react-router-dom": "^5.3.3",
    "jsonwebtoken": "8.5.1",
    "node-polyfill-webpack-plugin": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-helmet-async": "^1.3.0",
    "react-hook-form": "^7.47.0",
    "react-lazily": "^0.9.2",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.16.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "yup": "^1.3.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test:coverage": "craco test --collect-coverage --coverage --watchAll",
    "test": "craco test",
    "eject": "react-scripts eject",
    "prettier:check": "prettier --check src",
    "prettier": "prettier --write src",
    "lint": "eslint src"
  },
  "pre-commit": [
    "prettier:check",
    "lint"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@craco/craco": "^7.1.0",
    "@craco/types": "^7.1.0",
    "@faker-js/faker": "^8.2.0",
    "@mswjs/data": "^0.15.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "msw": "^1.3.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "jest": {
    "clearMocks": true,
    "moduleNameMapper": {
      "^@/(.+)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "!<rootDir>/src/index.tsx",
      "!<rootDir>/src/helpers/testsHelpers.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
